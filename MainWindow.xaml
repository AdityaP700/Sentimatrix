<Window x:Class="WpfSidebarApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Email Dashboard" Height="600" Width="1000">
    <Grid>
        <!-- Main Grid with two columns: Sidebar and Content -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="#2D2D30">
            <StackPanel>
                <!-- Profile Section -->
                <Border Padding="20" BorderBrush="#404045" BorderThickness="0,0,0,1">
                    <StackPanel>
                        <!-- Profile Picture -->
                        <Ellipse Width="80" Height="80" Margin="0,0,0,10">
                            <Ellipse.Fill>
                                <SolidColorBrush Color="#404045"/>
                            </Ellipse.Fill>
                        </Ellipse>
                        
                        <!-- User Name -->
                        <TextBlock Text="John Doe" 
                                 Foreground="White" 
                                 FontSize="18" 
                                 FontWeight="Bold"
                                 HorizontalAlignment="Center"/>
                        
                        <!-- Email -->
                        <TextBlock Text="john.doe@example.com" 
                                 Foreground="#B0B0B0" 
                                 FontSize="12"
                                 HorizontalAlignment="Center"
                                 Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Email Section -->
                <StackPanel Margin="0,20,0,0">
                    <Button Style="{StaticResource NavButton}"
                            Margin="10,5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📥" FontSize="16" Margin="0,0,10,0"/>
                            <TextBlock Text="Inbox"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource NavButton}"
                            Margin="10,5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📤" FontSize="16" Margin="0,0,10,0"/>
                            <TextBlock Text="Sent"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource NavButton}"
                            Margin="10,5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📝" FontSize="16" Margin="0,0,10,0"/>
                            <TextBlock Text="Drafts"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource NavButton}"
                            Margin="10,5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🗑️" FontSize="16" Margin="0,0,10,0"/>
                            <TextBlock Text="Trash"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Content Area -->
        <Grid Grid.Column="1" Background="#FFFFFF">
            <TextBlock Text="Select an email folder" 
                      FontSize="24" 
                      Foreground="#666666"
                      HorizontalAlignment="Center" 
                      VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>
